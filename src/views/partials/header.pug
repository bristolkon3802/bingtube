header
    a(href="/").header__logo
       i.fab.fa-youtube 
    nav    
        ul 
            li 
                a(href="/search") 
                    i.fas.fa-search
            if loggedIn
                li 
                    a(href="/videos/upload") 비디오업로드
                li 
                    a(href="/users/edit") Edit Profile
                li 
                    a(href="/users/logout") 로그아웃
                li 
                    a(href=`/users/${loggedInUser._id}`) 
                        if loggedInUser.avatarUrl === undefind 
                            span 😊
                        else 
                            if loggedInUser.socialOnly.toString().includes("http")
                                img.header__avatar(src=loggedInUser.avatarUrl)
                            else 
                                img.header__avatar(src="/"+loggedInUser.avatarUrl)

            else
                li 
                    a(href="/login") 로그인
                li 
                    a(href="/join").header__btn 계정등록