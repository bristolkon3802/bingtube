extends base

block content  
    div 
        video#preview
        button#actionBtn 녹화 시작
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data").upload__form
        label(for="video") 비디오 파일
        input(type="file", accept="video/*", required, name="video") 
        input(name="title" placeholder="Title", required, type="text", maxlength=80)
        input(name="description" placeholder="Description", required, type="text", minlength=20)
        input(name="hashtags" placeholder="해쉬태그, separated by comma.", required, type="text")
        input(type="submit", value="비디오 업로드")

block scripts
    script(src="/static/js/recorder.js")